{
  "name": "caretaker-harp-king",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/theme-builder.js && next dev --turbo",
    "build": "node scripts/theme-builder.js && next build",
    "start": "next start",
    "lint": "next lint",
    "theme:sync": "node scripts/dev-theme-watcher.js",
    "theme:select": "node scripts/theme-selector.js",
    "algolia:upload": "node scripts/upload-to-algolia.js",
    "setup": "node scripts/song-parser.js && node scripts/theme-builder.js && node scripts/upload-to-algolia.js",
    "deploy": "yarn build && touch out/.nojekyll && echo 'caretaker-harp-king.niranjanbala.dev' > out/CNAME",
    "deploy:github": "yarn build && touch out/.nojekyll"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/sortablejs": "^1.15.8",
    "algoliasearch": "4",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.1.6",
    "dexie": "^4.2.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "instantsearch.js": "^4.79.2",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-instantsearch": "^7.16.2",
    "sortablejs": "^1.15.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "zustand": "^5.0.8"
  },
  "keywords": [
    "pwa",
    "music",
    "requests",
    "caretaker-harp-king",
    "spotify",
    "algolia",
    "live-music",
    "audience-engagement"
