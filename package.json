{
  "name": "caretaker-harp-king",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/theme-builder.js && next dev --turbo",
    "build": "node scripts/theme-builder.js && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:ci && npm run test:e2e",
    "theme:sync": "node scripts/dev-theme-watcher.js",
    "theme:select": "node scripts/theme-selector.js",
    "algolia:upload": "node scripts/upload-to-algolia.js",
    "setup": "node scripts/song-parser.js && node scripts/theme-builder.js && node scripts/upload-to-algolia.js",
    "deploy": "yarn build && touch out/.nojekyll && echo 'caretaker-harp-king.niranjanbala.dev' > out/CNAME",
    "deploy:github": "yarn build && touch out/.nojekyll"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/sortablejs": "^1.15.8",
    "algoliasearch": "4",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.1.6",
    "dexie": "^4.2.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "framer-motion": "^12.23.12",
    "instantsearch.js": "^4.79.2",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-instantsearch": "^7.16.2",
    "sortablejs": "^1.15.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.0.8"
  },
  "keywords": [
    "pwa",
    "music",
    "requests",
    "caretaker-harp-king",
    "spotify",
    "algolia",
    "live-music",
    "audience-engagement"
  ],
  "author": "Susmith Louise - Caretaker Harp King and Niranjan Bala",
  "license": "CC-BY-NC-4.0",
  "description": "Progressive Web App for Caretaker Harp King music requests and audience engagement with Spotify-style UX and Algolia search",
  "repository": {
    "type": "git",
    "url": "https://github.com/niranjanbala/caretaker-harp-king.git"
  },
  "homepage": "https://github.com/niranjanbala/caretaker-harp-king#readme",
  "bugs": {
    "url": "https://github.com/niranjanbala/caretaker-harp-king/issues"
  }
}
