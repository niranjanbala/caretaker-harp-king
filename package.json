  "repository": {
    "type": "git",
    "url": "https://github.com/niranjanbala/caretaker-harp-king.git"
  },
  "homepage": "https://github.com/niranjanbala/caretaker-harp-king#readme",
  "bugs": {
    "url": "https://github.com/niranjanbala/caretaker-harp-king/issues"
  }
